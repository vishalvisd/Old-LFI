<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        	android:color="#343434" />  <!-- android:color="#f3ae1b"  --> 
            <stroke
                android:width="1dp"
                android:color="#171717" /> <!--  android:color="#bb6008"-->
            <corners
                android:radius="3dp" 
				  android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp" 
  				android:topLeftRadius="0dp" android:topRightRadius="0dp"/> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
            	android:startColor="#343434"
                android:endColor="#171717"
                android:angle="90" /> <!--  android:startColor="#f3ae1b"                 android:endColor="#bb6008"                android:angle="270" -->
            <stroke
                android:width="1dp"
                android:color="#171717"/> <!-- android:color="#bb6008" -->
            <corners
                android:radius="4dp" 
				 android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp" 
  				android:topLeftRadius="0dp" android:topRightRadius="0dp"/> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>